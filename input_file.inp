RUN-SECTION
	name = result_lambda_configurations
	propagate
	rlxunit = au
	tfinal = 5  tout = 0.1 tpsi = 0.1
	steps
	gridpop		# para showd1d
	pdensity	# particle density file. Useful to compute quantities after run.
	veigen
	psi
	auto
end-run-section

OPERATOR-SECTION
	opname = operator_file
end-operator-section

SBASIS-SECTION
	no-redundancy-check
	X1 =	10
end-sbasis-section

PBASIS-SECTION
	X1	sin	11	-25.0	25.0	short
	el  el  3
end-pbasis-section

INTEGRATOR-SECTION
	CMF      	=	0.1,	1.0d-7	#np1	# Constant Mean-Field scheme
	RK8/spf  	=	1.0d-7 			#np1	# Runge-Kutta integrator for SPFs
	SIL 		=   10,     1.0d-7
end-integrator-section

# Initial wavefunction (harmonic oscillator)
# 	Xi H0 x0,unit p0,unit omega,unit m,unit pop=n

INIT_WF-SECTION
	build
		init_state = 2
		X1	HO	0.0 0.0 1.0 1.0
	end-build
end-init_wf-section

end-input